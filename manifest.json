{
  "name": "Diary.ru new comment cheker",
  "description": "Расширение для хрома, информирующее о новых комментариях или умылах на сайте diary.space (ex. diary.ru)",
  "version": "0.251021",
  "manifest_version": 3,
  "background": {
    "service_worker": "worker.js"
  },
  "action": {
    "default_icon": {
      "32": "images/gray32.png"
    },
    "default_title": "Diary.ru проверятор",
    "default_popup": "popup.html"
  },
  "icons": {
    "32": "images/red32.png",
    "128": "images/red128.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "scripting",
    "nativeMessaging",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.diary.space/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
